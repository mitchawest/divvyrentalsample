{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/src",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2015",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "paths": {
      "@root/*": ["./*"],
      "@src/*": ["./src/*"],
      "@app/*": ["./src/app/*"],
      "@model/*": ["./src/app/models/*"],
      "@service/*": ["./src/app/services/*"],
      "@feature/*": ["./src/app/features/*"],
      "@util/*": ["./src/app/utils/*"],
      "@test/*": ["./__tests__/*"],
      "@mock/*": ["./__mocks__/*"]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "exclude": [
    "__mocks__",
    "__tests__",
    "node_modules"
  ]
}